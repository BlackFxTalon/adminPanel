    tabs = [
    {name: 'Последние обращения', id: 1, listItemClasses: 'site-section__table-tabs-item events-board-page__table-tabs-item', listItemBtnClasses: 'site-section__table-tabs-item-btn events-board-page__table-tabs-item-btn'},
