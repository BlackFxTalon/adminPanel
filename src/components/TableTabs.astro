} 

else if (Astro.url.pathname === '/feedbackPage' || Astro.url.pathname === '/feedbackPage.html') {
    tabs = [
    {name: 'Вопрос-ответ', id: 1, listItemClasses: 'site-section__table-tabs-item feedback-page__table-tabs-item', listItemBtnClasses: 'site-section__table-tabs-item-btn feedback-page__table-tabs-item-btn indicator-new'},
    {name: 'Заявки', id: 2, listItemClasses: 'site-section__table-tabs-item feedback-page__table-tabs-item', listItemBtnClasses: 'site-section__table-tabs-item-btn feedback-page__table-tabs-item-btn indicator-new'},
    {name: 'Чат', id: 3, listItemClasses: 'site-section__table-tabs-item feedback-page__table-tabs-item', listItemBtnClasses: 'site-section__table-tabs-item-btn feedback-page__table-tabs-item-btn indicator-new'}
]

