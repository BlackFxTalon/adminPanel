else if (Astro.url.pathname === '/goodsPage' || Astro.url.pathname === '/goodsPage.html') {
    tabs = [
    {name: 'Товары', id: 1, listItemClasses: 'site-section__table-tabs-item goods-page__table-tabs-item', listItemBtnClasses: 'site-section__table-tabs-item-btn goods-page__table-tabs-item-btn'},
    {name: 'Цены', id: 2, listItemClasses: 'site-section__table-tabs-item goods-page__table-tabs-item', listItemBtnClasses: 'site-section__table-tabs-item-btn goods-page__table-tabs-item-btn'},
